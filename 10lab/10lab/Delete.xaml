<Page x:Class="_10lab.Delete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_10lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Delete">

    <Grid>
        <StackPanel Name="DeleteStackPanel" Margin="20,20,0,0">
            <TextBlock>Enter id of the user to delete</TextBlock>
            <TextBox Name="UserId" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            <Button Margin="0,20,0,0" x:Name="btnDeleteUser" Content="Delete user" Width="120" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnDeleteUser_Click"/>
            <TextBlock Name="Result" FontSize="18" Margin="20,20,0,0"></TextBlock>
        </StackPanel >
    </Grid>
</Page>
