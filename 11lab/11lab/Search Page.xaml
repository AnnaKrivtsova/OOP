<Page x:Class="_11lab.Search_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_11lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search_Page">

    <Grid>
        <StackPanel Name="SearchStackPanel" Margin="20,20,20,0">
            <TextBlock>Enter id of the user to search</TextBlock>
            <TextBox Name="UserId" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            <TextBlock>Enter surname of the user to search</TextBlock>
            <TextBox Name="UserSurname" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            <Button Margin="0,20,0,0" x:Name="btnSearchUser" Content="Search user" Width="120" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnSearchUser_Click"/>
        </StackPanel >
    </Grid>
</Page>
