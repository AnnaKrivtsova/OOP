<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_6_7lab.Resources">
    <Style x:Key="Menu">
        <Style.Setters>
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.Background" Value="#80BA91" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.VerticalAlignment" Value="Top" />
            <Setter Property="Control.Height" Value="60" />
            <Setter Property="Control.Margin" Value="0,15,0,0" />
        </Style.Setters>
    </Style>
    <Style x:Key="ContentSpace">
        <Setter Property="Control.Background" Value="#CFF5DD" />
        <Setter Property="Control.VerticalAlignment" Value="Top" />
        <Setter Property="Control.Height" Value="550" />
        <Setter Property="Control.Margin" Value="0,75,0,0" />
    </Style>
    <Style x:Key="TextColor">
        <Setter Property="Control.Foreground" Value="#000000" />
        <Setter Property="Control.FontFamily" Value="Verdana" />
    </Style>
    <Style x:Key="GroupBox">
        <Setter Property="Control.BorderBrush" Value="#fcda9d" />
        <Setter Property="Control.FontSize" Value="18" />
        <Setter Property="Control.Margin" Value="20,95,20,30" />
        <Setter Property="Control.Foreground" Value="#000000" />
    </Style>
    <Style x:Key="CardButton" TargetType="Button">
        <Style.Setters>
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.Background" Value="#edfff2" />
            <Setter Property="Control.BorderBrush" Value="#80BA91" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.Width" Value="200" />
            <Setter Property="Control.Height" Value="130" />
            <Setter Property="Control.Foreground" Value="#000000"/>
        </Style.Setters>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True" />
                    <Condition Property="IsPressed" Value="True" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="FontSize" Value="14"/>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <EventTrigger RoutedEvent="Click">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:1" To="250" AutoReverse="True" />
                            <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:1" To="180" AutoReverse="True" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="MenuButton" TargetType="Button">
        <Style.Setters>
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.Width" Value="220" />
        </Style.Setters>
    </Style>
    <Style x:Key="MenuButtonAdd" TargetType="Button">
        <Style.Setters>
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.Width" Value="220" />
        </Style.Setters>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=isClient, Path=IsChecked}"
                        Value="True">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>